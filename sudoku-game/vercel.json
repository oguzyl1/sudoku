{
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"  
      },
      {
        "source": "/(.*)",
        "destination": "/dist/$1"  
      }
    ],
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/dist"
        }
      }
    ]
  }
  