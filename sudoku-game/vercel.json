{
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/api/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/client/index.html"
      }
    ],
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      }
    ]
  }
  